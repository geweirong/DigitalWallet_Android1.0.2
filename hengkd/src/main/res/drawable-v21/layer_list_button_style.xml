<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/shape_bg_ff8d3c_corner_10px">
    </item>
    <item>
        <ripple xmlns:android="http://schemas.android.com/apk/res/android"
                android:color="#33000000"><!-- 按下出现的水波纹的颜色 -->
            <item>
                <selector>
                    <item android:state_pressed="true" >
                        <shape>
                            <!-- 圆角 -->
                            <corners
                                android:radius="@dimen/sobot_DIMEN_10PX"/><!-- 设置圆角半径 -->
                            <solid android:color="#11000000"/>
                        </shape>
                    </item>
                    <item android:state_enabled="false">
                        <shape>
                            <!-- 圆角 -->
                            <corners
                                android:radius="@dimen/sobot_DIMEN_10PX"/><!-- 设置圆角半径 -->
                            <solid android:color="@color/btn_gray"/>
                        </shape>
                    </item>
                    <item android:state_enabled="true" android:drawable="@drawable/shape_bg_ff8d3c_corner_10px"/>
                </selector>
            </item>
        </ripple>
    </item>
</layer-list>