<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/MatchMatch.Vertical"
              android:background="@color/global_white_color">

    <include
        layout="@layout/layout_toolbar"/>

    <LinearLayout
        style="@style/MatchAuto.Vertical"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:id="@+id/rl_graph_code"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_graph_code"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shape_edittext"
                android:drawableLeft="@mipmap/icon_graph_code"
                android:drawablePadding="8dp"
                android:hint="请输入图形验证码"
                android:maxLength="4"
                android:padding="10dp"
                android:paddingLeft="40dp"
                android:textColor="@color/global_black_color"
                android:textColorHint="@color/global_hint_color"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_graph_code"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:layout_alignRight="@id/et_graph_code"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_verification"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <EditText
                android:id="@+id/et_verification"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_edittext"
                android:drawableLeft="@mipmap/icon_messagex"
                android:drawablePadding="8dp"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:padding="10dp"
                android:paddingLeft="40dp"
                android:textColor="@color/global_black_color"
                android:textColorHint="@color/global_hint_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_verification"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:layout_alignRight="@id/et_verification"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="发送验证码"
                android:textColor="@color/theme_color"
                android:textSize="16sp"/>

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_alignLeft="@id/tv_verification"
                android:layout_gravity="center_horizontal"
                android:background="@color/theme_color"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/global_btn_height"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/layer_list_button_style"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>
