<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch.Vertical"
    tools:context="com.innext.szqb.ui.authentication.activity.GDMapSearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_back"
            style="?attr/toolbarNavigationButtonStyle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_back" />

        <com.innext.szqb.widget.ClearEditText
            android:id="@+id/et_search"
            android:layout_width="0px"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_edittext_normal"
            android:drawableLeft="@mipmap/icon_poisearch"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="查找小区、大厦、学校等"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColor="@color/global_black_color"
            android:textColorHint="@color/global_label_color"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_search_btn"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="搜索"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
    <include
        layout="@layout/layout_line"/>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
