<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/MatchMatch.Vertical"
              android:background="@color/global_white_color">

    <include layout="@layout/layout_toolbar"/>

    <ScrollView style="@style/MatchMatch">

        <LinearLayout
            style="@style/MatchAuto.Vertical"
            android:layout_marginTop="50dp">

            <RelativeLayout
                android:id="@+id/rl_graph_code"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_graph_code"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/shape_edittext"
                    android:drawableLeft="@mipmap/icon_graph_code"
                    android:drawablePadding="8dp"
                    android:hint="请输入图形验证码"
                    android:maxLength="4"
                    android:padding="10dp"
                    android:paddingLeft="40dp"
                    android:textColor="@color/global_black_color"
                    android:textColorHint="@color/global_hint_color"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_graph_code"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_alignRight="@id/et_graph_code"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_verification"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <EditText
                    android:id="@+id/et_verification"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/shape_edittext"
                    android:drawableLeft="@mipmap/icon_messagex"
                    android:drawablePadding="8dp"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="10dp"
                    android:paddingLeft="40dp"
                    android:textColor="@color/global_black_color"
                    android:textColorHint="@color/global_hint_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_verification"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:layout_alignRight="@id/et_verification"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="发送验证码"
                    android:textColor="@color/theme_color"
                    android:textSize="16sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:layout_alignLeft="@id/tv_verification"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/theme_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp">

                <com.innext.szqb.widget.ClearEditText
                    android:id="@+id/et_password"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/shape_edittext"
                    android:digits="@string/login_password_input"
                    android:drawableLeft="@mipmap/icon_key_x"
                    android:drawablePadding="8dp"
                    android:hint="请设置6~16位登录密码"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:padding="10dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/global_black_color"
                    android:textColorHint="@color/global_hint_color"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_invitecode_show"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/et_invite_show"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:maxLength="16"
                    android:padding="10dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="10dp"
                    android:text="我有邀请码>>"
                    android:textColor="@color/global_black_color"
                    android:textSize="16sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_invitecode"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <com.innext.szqb.widget.ClearEditText
                    android:id="@+id/et_invite"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/shape_edittext"
                    android:drawableLeft="@mipmap/icon_mailer"
                    android:drawablePadding="8dp"
                    android:hint="请输入邀请码(可选)"
                    android:maxLength="16"
                    android:padding="10dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/global_black_color"
                    android:textColorHint="@color/global_hint_color"
                    android:textSize="16sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/global_btn_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/layer_list_button_style"
                android:gravity="center"
                android:text="注册"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/ll_agreement"
                style="@style/WrapWrap.Horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/ck_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:drawablePadding="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/ck_agreement"
                    android:text="注册即同意"
                    android:textColor="@color/global_black_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_loan_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/sobot_DIMEN_5PX"
                    android:layout_toRightOf="@id/tv_loan_agreement"
                    android:text="《注册协议》"
                    android:textColor="@color/theme_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_credit_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_loan_agreement"
                    android:text="《信用授权协议》"
                    android:textColor="@color/theme_color"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <include layout="@layout/layout_toolbar"/>

</LinearLayout>
