<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/global_white_color"
    >

    <include layout="@layout/layout_toolbar"/>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="请设置六位交易密码"
        android:textColor="#333333"
        android:textSize="15sp"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_below="@id/tv_tip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/shape_setpwd"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ed_pwd_key1"
                android:layout_width="0dp"

                android:layout_height="fill_parent"

                android:layout_weight="1"
                android:gravity="center"
                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible"/>

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/theme_line_color"/>

            <TextView
                android:id="@+id/ed_pwd_key2"
                android:layout_width="0dp"

                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible"/>

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/theme_line_color"/>

            <TextView
                android:id="@+id/ed_pwd_key3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"

                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible"/>

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/theme_line_color"/>

            <TextView
                android:id="@+id/ed_pwd_key4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"

                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible"/>

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/theme_line_color"/>

            <TextView
                android:id="@+id/ed_pwd_key5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"

                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible"/>

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/theme_line_color"/>

            <TextView
                android:id="@+id/ed_pwd_key6"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="●"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="invisible"/>


        </LinearLayout>
    </FrameLayout>

    <!-- 自定义键盘视图 -->

    <include
        android:id="@+id/llCustomerKb"
        layout="@layout/global_input_keyboard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

</RelativeLayout>
