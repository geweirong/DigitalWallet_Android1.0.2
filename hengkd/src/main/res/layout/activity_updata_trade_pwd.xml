<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_white_color"
    >

    <include
        layout="@layout/layout_toolbar"/>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_below="@id/toolbar"
        android:text="请输入您旧交易密码"
        android:textColor="#333333"
        android:textSize="15sp" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp" 
        android:layout_below="@id/tv_tip">
		
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/shape_setpwd"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
             
                android:id="@+id/ed_pwd_key1"
               
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_weight="1" 
                android:text="●"
                android:visibility="invisible"/>

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/theme_line_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/ed_pwd_key2"
                android:layout_weight="1" 
                android:text="●"
                android:visibility="invisible"/>

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/theme_line_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"
                
                android:id="@+id/ed_pwd_key3"
                android:layout_weight="1"
                android:text="●" 
                android:visibility="invisible"/>

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/theme_line_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"
                
                android:id="@+id/ed_pwd_key4"
                android:layout_weight="1" 
                android:text="●"
                android:visibility="invisible"/>

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/theme_line_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"
                
                android:id="@+id/ed_pwd_key5"
                android:layout_weight="1" 
                android:text="●"
                android:visibility="invisible"/>
			<View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/theme_line_color" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"
                
                android:id="@+id/ed_pwd_key6"
                android:layout_weight="1" 
                android:text="●"
                android:visibility="invisible"/>

            
        </LinearLayout>
    </FrameLayout>

    <!-- 自定义键盘视图 -->

    <include
        android:id="@+id/llCustomerKb"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/global_input_keyboard"
        android:visibility="gone" />

</RelativeLayout>
