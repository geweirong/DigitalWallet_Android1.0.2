<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:foreground="?android:selectableItemBackground"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/c_ffffff">

    <ImageView
        android:id="@+id/item_borrowing_record_iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_4"
        android:src="@mipmap/ic_borrowing_record_normal" />
    <TextView
        android:id="@+id/tv_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="第1期"
        android:textColor="@color/black_9"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/item_borrowing_record_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tv_repaymentAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥1000.00"
            android:textColor="@color/black_3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_repaymentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="请于5月1日前还款"
            android:textColor="@color/black_9" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_ff4949"
            android:visibility="invisible"
            android:textSize="15sp"
            android:text="已逾期" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/icon_enter"/>
    </LinearLayout>

</LinearLayout>