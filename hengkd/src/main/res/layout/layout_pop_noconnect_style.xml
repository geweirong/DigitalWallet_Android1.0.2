<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_back_black_color">

    <ImageView
        android:id="@+id/iv_no_connect"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="162dp"
        android:src="@mipmap/icon_noconnect" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_no_connect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="无网络信号"
        android:textColor="@color/repayment_black3_3"
        android:textSize="17sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_message"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="请检查网络是否正常后,点击屏幕重试"
        android:textColor="#999999"
        android:textSize="15sp"
        android:visibility="gone" />
</RelativeLayout>